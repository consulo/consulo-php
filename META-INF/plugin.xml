<idea-plugin version="2">
	<id>org.consulo.php</id>
	<name>PHP</name>
	<description>PHP support with refactoring</description>
	<vendor>Jay &amp; Consulo.org</vendor>
	<depends>com.intellij.xml</depends>
	<application-components>
		<component>
			<implementation-class>org.consulo.php.vfs.PharFileSystem</implementation-class>
		</component>
	</application-components>
	<project-components>
		<component>
			<implementation-class>org.consulo.php.pom.PhpPomAspect</implementation-class>
		</component>
	</project-components>
	<actions>
		<action id="PhpNewFile" class="org.consulo.php.actions.PhpCreateFileAction">
			<add-to-group group-id="NewGroup1" anchor="first"/>
		</action>
		<action id="PhpNewClass" class="org.consulo.php.actions.PhpCreateClassAction">
			<add-to-group group-id="NewGroup1" anchor="after" relative-to-action="PhpNewFile"/>
		</action>

		<action id="PhpGenerateGetterAction" class="org.consulo.php.actions.generate.PhpGenerateGetterAction" text="Getter" description="Generates getter">
			<add-to-group group-id="GenerateGroup" anchor="first"/>
		</action>
	</actions>

	<extensions defaultExtensionNs="com.intellij">
		<moduleExtensionProvider key="php" allow-mixin="true" implementationClass="org.consulo.php.module.extension.PhpModuleExtensionProvider"/>
		<fileTypeFactory implementation="org.consulo.php.lang.PhpFileTypeFactory"/>
		<fileTypeDetector implementation="org.consulo.php.lang.PhpFileDetector"/>
		<xml.fileNSInfoProvider implementation="org.consulo.php.PhpXmlFileNSInfoProvider"/>
		<additionalTextAttributes scheme="Default" file="colorSchemes/Default.xml"/>

		<internalFileTemplate name="PHP Class"/>
		<internalFileTemplate name="PHP File"/>
		<internalFileTemplate name="PHP Interface"/>
		<internalFileTemplate name="Php Trait"/>
		<lang.elementIcon language="PHP" file="/icons/phpLang.png" />

		<highlightVisitor implementation="org.consulo.php.codeInsight.highlight.PhpHighlightVisitor" />
		<iconDescriptorUpdater implementation="org.consulo.php.PhpIconDescriptorUpdater" order="before default"/>
		<treeStructureProvider implementation="org.consulo.php.ide.projectView.PhpTreeStructureProvider" />
		<colorSettingsPage implementation="org.consulo.php.lang.highlighter.PhpColorsPage"/>
		<gotoClassContributor implementation="org.consulo.php.gotoByName.PhpClassContributor"/>
		<sdkType implementation="org.consulo.php.sdk.PhpSdkType"/>
		<psi.packageResolver implementation="org.consulo.php.module.packageSupport.PhpPsiPackageResolver" />
		<lang.versionResolver language="PHP" implementationClass="org.consulo.php.lang.psi.impl.PhpLanguageVersionResolver" />
		<lang.parserDefinition language="PHP" implementationClass="org.consulo.php.lang.parser.PhpParserDefinition"/>
		<lang.commenter language="PHP" implementationClass="org.consulo.php.lang.commenter.PhpCommenter"/>
		<lang.findUsagesProvider language="PHP" implementationClass="org.consulo.php.lang.findUsages.PhpFindUsagesProvider"/>
		<lang.braceMatcher language="PHP" implementationClass="org.consulo.php.lang.braceMatcher.PhpBraceMatcher"/>
		<lang.foldingBuilder language="PHP" implementationClass="org.consulo.php.ide.folding.PhpFoldingBuilder" />
		<codeInsight.parameterInfo language="PHP" implementationClass="org.consulo.php.lang.documentation.params.PhpParameterInfoHandler"/>

		<lang.syntaxHighlighterFactory key="PHP" implementationClass="org.consulo.php.lang.highlighter.PhpSyntaxHighlighterFactory" />
		<annotator language="PHP" implementationClass="org.consulo.php.lang.annotator.PhpAnnotator"/>
		<lang.fileViewProviderFactory language="PHP" implementationClass="org.consulo.php.lang.PhpFileViewProviderFactory"/>
		<lang.substitutor language="HTML" implementationClass="org.consulo.php.PhpLanguageSubstitutor" />
		<lang.psiStructureViewFactory language="PHP" implementationClass="org.consulo.php.lang.PhpStructureViewBuilderProvider"/>
		<multiHostInjector forClass="com.intellij.psi.xml.XmlTag" implementationClass="org.consulo.php.PhpMultiHostInjector" />
		<typedHandler implementation="org.consulo.php.lang.PhpTypedHandler"/>

		<itemPresentationProvider forClass="org.consulo.php.lang.psi.PhpClass" implementationClass="org.consulo.php.ide.presentation.PhpClassPresentation" />
		<itemPresentationProvider forClass="org.consulo.php.lang.psi.PhpFile" implementationClass="org.consulo.php.ide.presentation.PhpFilePresentation" />

		<stubIndex implementation="org.consulo.php.index.PhpClassIndex"/>
		<stubIndex implementation="org.consulo.php.index.PhpFullFqClassIndex"/>

		<stubElementTypeHolder class="org.consulo.php.lang.psi.PhpStubElements" />

		<inspectionToolProvider implementation="org.consulo.php.codeInsight.PhpInspectionToolProvider" />

		<pathMacroExpendableProtocol protocol="phar" />
	</extensions>
</idea-plugin>
