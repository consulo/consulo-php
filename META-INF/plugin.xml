<idea-plugin version="2">
	<id>net.jay.plugins.php</id>
	<name>PHP</name>
	<description>
		PHP support with refactoring
	</description>
	<vendor>Jay &amp; Consulo.org</vendor>
	<depends>com.intellij.xml</depends>
	<depends>org.consulo.java</depends>
	<depends>org.consulo.java.platform</depends>
	<application-components>
		<component>
			<implementation-class>net.jay.plugins.php.PHPSupportApplicationComponent</implementation-class>
		</component>
	</application-components>
	<project-components>
		<component>
			<implementation-class>net.jay.plugins.php.pom.PhpPomAspect</implementation-class>
		</component>
		<component>
			<implementation-class>net.jay.plugins.php.lang.highlighter.hierarchy.PhpHierarchyHighlightingPassFactory
			</implementation-class>
		</component>
		<component>
			<implementation-class>net.jay.plugins.php.lang.psi.PhpPsiElementFactory</implementation-class>
		</component>
	</project-components>
	<module-components>
		<component>
			<implementation-class>net.jay.plugins.php.cache.PhpModuleCacheManager</implementation-class>
		</component>
	</module-components>
	<!--<actions>
	  <action id="PhpGenerateGetterAction" class="net.jay.plugins.php.actions.generate.PhpGenerateGetterAction"
			  text="Getter" description="Generates getter">
		<add-to-group group-id="GenerateGroup" anchor="first"/>
	  </action>
	</actions>-->

	<extensions defaultExtensionNs="com.intellij">
		<fileTypeFactory implementation="net.jay.plugins.php.lang.PHPFileTypeFactory"/>
		<fileTypeDetector implementation="net.jay.plugins.php.lang.PhpFileDetector"/>
		<additionalTextAttributes scheme="Default" file="colorSchemes/Default.xml" />

		<colorSettingsPage implementation="net.jay.plugins.php.lang.highlighter.PHPColorsPage"/>
		<gotoClassContributor implementation="net.jay.plugins.php.gotoByName.PhpClassContributor"/>
		<sdkType implementation="net.jay.plugins.php.lang.projectConfiguration.PhpSdkType"/>
		<lang.parserDefinition language="PHP" implementationClass="net.jay.plugins.php.lang.parser.PHPParserDefinition"/>
		<lang.commenter language="PHP" implementationClass="net.jay.plugins.php.lang.commenter.PHPCommenter"/>
		<lang.findUsagesProvider language="PHP" implementationClass="net.jay.plugins.php.lang.findUsages.PhpFindUsagesProvider"/>
		<lang.braceMatcher language="PHP" implementationClass="net.jay.plugins.php.lang.braceMatcher.PHPBraceMatcher"/>
		<codeInsight.parameterInfo language="PHP" implementationClass="net.jay.plugins.php.lang.documentation.params.PhpParameterInfoHandler"/>

		<syntaxHighlighter key="PHP" implementationClass="net.jay.plugins.php.lang.highlighter.PhpFileSyntaxHighlighter"/>
		<annotator language="PHP" implementationClass="net.jay.plugins.php.lang.annotator.PhpAnnotator"/>
		<lang.fileViewProviderFactory language="PHP" implementationClass="net.jay.plugins.php.lang.PHPFileViewProviderFactory"/>
		<lang.psiStructureViewFactory language="PHP" implementationClass="net.jay.plugins.php.lang.PHPStructureViewBuilderProvider"/>
		<typedHandler implementation="net.jay.plugins.php.lang.PHPTypedHandler"/>
	</extensions>
</idea-plugin>
